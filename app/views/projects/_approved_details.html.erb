<h2>Project Settings</h2>
<dl>
  <dt>Project ID</dt> <dd><%= @project.metadata[:project_id] %></dd>
  <dt>Storage Capacity</dt> 
    <dd><dl>
      <dt>Requested</dt><dd><%= "#{@project.metadata[:storage_capacity][:size][:requested]} #{@project.metadata[:storage_capacity][:unit][:requested]}" %></dd>
      <dt>Approved</dt><dd><%= "#{@project.metadata[:storage_capacity][:size][:approved]} #{@project.metadata[:storage_capacity][:unit][:approved]}" %></dd>
    </dl></dd>
  <dt>Storage Performance Expectations</dt>
  <dd><dl>
    <dt>Requested</dt><dd><%= @project.metadata[:storage_performance_expectations][:requested] %></dd>
    <dt>Approved</dt><dd><%= @project.metadata[:storage_performance_expectations][:approved] %></dd>
  </dl></dd>
  <dt>Project Purpose</dt> <dd><%= @project.metadata[:project_purpose] %></dd>
</dl>
<% if @project.in_mediaflux? %>
  <dl>
    <dt>Mediaflux id:</dt> <dd><%= @project.mediaflux_id %></dd>
  </dl>
<% else %>
  <p>This project has not been saved to Mediaflux</p>
<% end %>

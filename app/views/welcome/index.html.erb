<style>
  table > tbody > tr > th {
    border-width: 1px;
    border-style: dotted;
  }

  table > tbody > tr > td {
    border-width: 1px;
    border-style: dotted;
    vertical-align: top;
  }

  .asset-description {
    background-color:#f0f4f9;
    display:inline-block;
    max-width: 400px;
  }

  .asset-note {
    background-color:#f9f8f0;
    display:inline-block;
    max-width: 400px;
  }
</style>

<% unless current_user %>
  <h1>Welcome to TigerData</h1>
  Please log in.
<% else %>
  <h1>Welcome, <%= current_user.given_name %>!</h1>
  <div class="dashboard-section">
    <% if @projects.size > 0 %> 
      <h2>My Sponsored Projects</h1>
      <ul class="project-list">
        <% @projects.each do |project| %>
          <li><%= link_to(project.title, project) %> </li>
        <% end %>
      </ul>
    <% end %>
    <div>
      <br/>
      <%= link_to "New Project", new_project_path(), class: "btn btn-primary btn-sm" %>
    </div>
    </div>
  <% end %>